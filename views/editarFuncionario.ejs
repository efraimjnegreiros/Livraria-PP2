<h1>Editar Funcionário</h1>
<form action="/funcionarios/editar/<%= funcionario.id %>" method="POST">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" name="nome" value="<%= funcionario.nome %>" required>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= funcionario.email %>" required>

    <label for="senha">Senha:</label>
    <input type="password" id="senha" name="senha" value="" placeholder="Nova senha (opcional)">

    <button type="submit">Salvar Alterações</button>
</form>
